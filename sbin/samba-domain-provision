#!/usr/bin/env bash

# Exit if any error
set -euo pipefail

# Skip domain provision if krb5 already have domain info
grep -q "${SEARCH_DOMAIN}" /etc/krb5.conf && \
  echo 'Skipping domain provision..' && exit 0

samba-tool domain provision \
  --server-role="${SERVER_ROLE}" \
  --use-rfc2307 \
  --dns-backend="${DNS_BACKEND}" \
  --realm="${REALM}" \
  --domain="${DOMAIN}" \
  --adminpass="${ADMIN_PASS}" \
  --option="dns forwarder=${DNS_FORWARDER}"

update-etc-files